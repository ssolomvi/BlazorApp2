@page "/results-block-1"
@using System.ComponentModel.DataAnnotations
@inject NavigationManager NavigationManager

<h3>Результаты вычисления 1-ого блока</h3>

<div class="container border border-secondary rounded mx-3">
    <div class="col my-3">
        <div class="form-group col mb-3">
            <label class="row-md-4">Максимальный коэффициент подъемной силы: </label>
            <div class="row-md-10">
                <p>@MaxLiftCoefficient</p>
            </div>
        </div>
        <div class="form-group col mb-3">
            <label class="row-md-4">Отношение максимальной посадочной массы к максимальной взлетной массе: </label>
            <div class="row-md-10">
                <p>@MaxLandingMassToMaxTakeOffMassRatio</p>
            </div>
        </div>
        <div class="form-group col mb-3">
            <label class="row-md-4">Максимальная нагрузка на крыло: </label>
            <div class="row-md-10">
                <p>@MaxWingLoading.ToString()</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-right">
                <Button Color="ButtonColor.Primary" @onclick="NavigateBack">Вернуться к вводу параметров</Button>
            </div>
        </div>
    </div>
</div>


@code {

    [Parameter]
    // [Display(Name = "Максимальный коэффициент подъемной силы")]
    [SupplyParameterFromQuery(Name = "maxLiftCoefficient")]
    public double? MaxLiftCoefficient { get; set; }

    [Parameter]
    // [Display(Name = "Отношение максимальной посадочной массы к максимальной взлетной массе")]
    [SupplyParameterFromQuery(Name = "maxLandingMassToMaxTakeOffMassRatio")]
    public double? MaxLandingMassToMaxTakeOffMassRatio { get; set; }

    [Parameter]
    // [Display(Name = "Максимальная нагрузка на крыло")]
    [SupplyParameterFromQuery(Name = "maxWingLoading")]
    public double? MaxWingLoading { get; set; }

    private void NavigateBack()
    {
        NavigationManager.NavigateTo("/");
    }

}