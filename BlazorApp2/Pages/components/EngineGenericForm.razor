@using Meziantou.AspNetCore.Components
@using System.ComponentModel.DataAnnotations
@using Pax_AC_Design.ModuleCalculate.Request

<h3>EngineGenericForm</h3>

<EditForm Model="_Engine" OnSubmit="() => { }">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <GenericForm Model="_Engine" EditorClass="form-control">
        <FieldTemplate Context="field">
            <div class="form-group row mb-3">
                <label class="col-md-2 col-form-label"
                       for="@field.EditorId">
                    @field.DisplayName
                </label>
                <div class="col-md-10">
                    @field.EditorTemplate
                    @field.FieldValidationTemplate
                </div>
            </div>
        </FieldTemplate>
    </GenericForm>

    <button type="submit" class="btn btn-primary">Submit</button>

</EditForm>

@code {

    RequestEngine _Engine { get; set; } = СreateEngineWithTestData();

    private static RequestEngine СreateEngineWithTestData()
    {
        return new RequestEngine(
            EngineType.Turbojet,
            4,
            8.7);
    }

}